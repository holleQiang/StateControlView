<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="StateFrameLayout">
        <attr name="errorLayoutId" format="integer|reference" />
        <attr name="loadingLayoutId" format="integer|reference" />
        <attr name="emptyLayoutId" format="integer|reference" />
        <attr name="currentState" format="enum">
            <enum name="content" value="1"/>
            <enum name="loading" value="2"/>
            <enum name="error" value="3"/>
            <enum name="empty" value="4"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="StateFrameLayout_Layout">
        <attr name="viewType" format="enum">
            <enum name="content" value="0"/>
            <enum name="loading" value="1"/>
            <enum name="error" value="2"/>
            <enum name="empty" value="3"/>
        </attr>
    </declare-styleable>

    <attr name="StateFrameLayoutStyle" />
</resources>